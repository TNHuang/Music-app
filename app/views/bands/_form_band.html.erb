<% action_url = @band.persisted? ? band_url(@band) : bands_url %>
<% form_method = @band.persisted? ? "PATCH" : "POST" %>
<% submit_text = @band.persisted? ? "Update!" : "Create new band!" %>


<form action="<%= action_url %>" method="POST">
  <input type="hidden" name="_method" value="<%= form_method %>">
  <%= form_validation %>

  <table border="1">
    <tr>
      <td><label for="name">Name</label></td>
      <td><input type="text" id="name"
            name="band[name]" value="<%= @band.name %>" ></td>
      <td><input type="submit" value="<%= submit_text %>"></td>
    </tr>

  </table>

</form>
<br>
<a href="<%= bands_url %>">back to band index page</a>
